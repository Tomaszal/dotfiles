# Default orientation & workspace layout
default_orientation		horizontal
workspace_layout		default

# Windowo border settings
hide_edge_borders		both
new_window			pixel 0
new_float			pixel 0
show_marks			no

# Enable gaps
set	$gap_size		15
gaps	outer			0
gaps	inner			$gap_size
smart_gaps			on

# Resize gaps
set	$mode_gaps		"Resize gaps: +|-|0|d"
bindsym	$mod+Shift+g		mode $mode_gaps

mode $mode_gaps {
	bindsym plus		gaps inner all plus	5
	bindsym minus		gaps inner all minus	5
	bindsym 0		gaps inner all set	0
	bindsym d		gaps inner all set	$gap_size

        bindsym Return		mode "default"
        bindsym Escape		mode "default"
}

# Layout setup (US & RU). Alt+Shift to toggle between them.
exec --no-startup-id		"setxkbmap -model pc105 -layout us,ru -variant altgr-intl, -option grp:alt_shift_toggle"

