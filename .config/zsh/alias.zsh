alias history='fc -fl 1'
alias cp='cp -i'
alias df='df -h'
alias free='free -h'
alias ls='ls -FGh --color'
alias la='ls -lA --group-directories-first --time-style=+"%Y.%m.%d %H:%M"'
alias ll='ls -l --group-directories-first --time-style=+"%Y.%m.%d %H:%M"'
